[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[color]
	ui = auto
    diff = auto
[format]
	pretty = "%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset"
[diff]
	tool = gvimdiff
[difftool]
	prompt = gvimdiff
[alias]
    cl = clone
	co = checkout
	ci = commit -m
	br = branch
	st = status
	last = log -1 HEAD
    sb = status -sb
	df = difftool
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

