#!monit
# /etc/monit.d/markdoc

set logfile /var/log/monit.log

check process markdoc with pidfile "/var/run/markdoc.pid"
  start program = "/etc/init.d/markdoc start"
  stop program = "/etc/init.d/markdoc stop"
  if failed port 8008 protocol HTTP
    request /
    with timeout 10 seconds
    then restart
