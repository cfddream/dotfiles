# nodejs
node="$HOME/develop/lnmp/node/bin"
if [ -d "$node" ]; then
    PATH="$node:$PATH"
fi

# redis
redis="$HOME/develop/lnmp/redis/bin"
if [ -d "$redis" ]; then
    PATH="$redis:$PATH"
fi

# nginx
nginx="$HOME/develop/lnmp/nginx/sbin"
if [ -d "$redis" ]; then
    PATH="$redis:$PATH"
fi

# percona (mysql)
mysql="$HOME/develop/lnmp/percona/bin"
if [ -d "$mysql" ]; then
    PATH="$mysql:$PATH"
fi

# postgresql
pgsql="$HOME/develop/lnmp/pgsql/bin"
if [ -d "$pgsql" ]; then
    PATH="$pgsql:$PATH"
fi

# php
php="$HOME/develop/lnmp/php"
if [ -d "$php" ]; then
    PATH="$php/bin:$php/sbin:$PATH"
fi

# memcached
memcached="$HOME/develop/lnmp/memcached"
if [ -d "$memcached" ]; then
    PATH="$memcached/bin:$PATH"
fi

# mongodb
mongodb="$HOME/develop/lnmp/mongodb"
if [ -d "$mongodb" ]; then
    PATH="$mongodb/bin:$PATH"
fi

# sphinx
sphinx="$HOME/develop/lnmp/sphinx"
if [ -d "$sphinx" ]; then
    PATH="$sphinx/bin:$PATH"
fi

export PATH

# python virtualenv
export PYVENVS="$HOME/develop/lnmp/pyvenvs"

# LD_LIBRARY_PATH
export LD_LIBRARY_PATH="$HOME/develop/lnmp/percona/lib:$HOME/develop/lnmp/pgsql/lib:$LD_LIBRARY_PATH"
